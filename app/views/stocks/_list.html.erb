<table class="table table-striped">
<!-- Table head -->
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
        <th>Action</th>
      <% end %>
    </tr>
  </thead>
<!-- Table body -->
  <tbody>
    <% @user_stocks.each do |f| %>
      <tr>
          <td><%= f.name %></td>
          <td><%= f.ticker %></td>
          <td><%= f.last_price %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Delete this stock", user_stock_path(f), method: :delete,
                    data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-default"%>
            </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
